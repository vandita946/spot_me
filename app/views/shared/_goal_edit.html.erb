<div class="modal fade" id="goal-edit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit goal</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for (@goal), remote: true do |f| %>
          <%= f.input :title %>
          <%= f.input :description %>
          <%= f.input :start_date, as: :date, html5: true %>
          <%= f.input :deadline, as: :date, html5: true %>
          <%= f.button :submit, "Update", class: "btn btn-primary" %>
        <% end %>
        <%= link_to "Delete", {:controller => :goals, :action => 'destroy', :id => goal.id }, :method => :delete, data: { confirm: "Are you sure you want to give up?" }, class: "btn btn-danger mt-2" %>
      </div>
    </div>
  </div>
</div>
