<div id="add_buddy_form">
<div class="modal fade" id="add_buddy" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a buddy to this goal</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for goal_connection, remote: true do |f| %>
            <%= f.input :connection, collection: current_user.connections %>
            <%= f.input :goal, as: :hidden, input_html: { value: goal.id} %>
            <%= f.submit "Submit", class: "btn btn-primary" %>
        <% end %>

      </div>

    </div>
  </div>
</div>
</div>
