    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
     <% if user_signed_in? %>
      <div><%= image_tag current_user.avatar_thumbnail, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %> &nbsp<%= current_user.firstname %> &nbsp <i class="fa fa-chevron-down" aria-hidden="true"></i></div>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav">

        <li class="nav-item active">
          <%= link_to "Edit Profile", edit_user_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Invite Friends", "#", class: "nav-link" %>

        </li>
        <li class="nav-item active">
          <%= link_to "View Connections", "#", class: "nav-link" %>
        </li>
         <li class="nav-item active">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>

        <% else %>
        <div class= "justify-content-center">
          <%= cl_image_tag("spotme_logo_with_motto_tua0to.svg", :width=>120, :crop=>"scale", class: "navbar-brand") %>
        </div>
        <% end %>

      </ul>
    </div>

    <div class="navbar-brand">
      <%= link_to feeds_index_path do %>
        <%= cl_image_tag("spotme_logo_with_motto_tua0to.svg", :height=>60, :crop=>"scale") %>
      <% end %>
    </div>
  </div>
</div>
