<div class="modal fade" id="completion" tabindex="-1" role="dialog" aria-labelledby="completionLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="completionLabel">Add a completion message!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [milestone, completion_message], method: "new", url: new_milestone_completion_message_path(milestone) do |f|%>
          <%= f.input :content %>
          <%= f.submit "Submit", class: "btn btn-primary" %>
        
        <% end %>
        
      </div>
    </div>
  </div>
</div>