<div id="#message_form">
<div class="modal fade" id="encouragement-<%=news.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-dark" id="exampleModalLabel">Send message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if news.is_a?(Milestone) %>
          <%= simple_form_for [news.goal.chatroom, @message], remote: true do |f| %>
              <%= f.input :content, input_html: {value: f.object.content || 'Well done!'} %>
              <%= f.submit "Submit", class: "btn btn-primary" %>
          <% end %>
        <% end %>

        <% if news.is_a?(Goal) %>
          <%= simple_form_for [news.chatroom, @message], remote: true do |f| %>
              <%= f.input :content, input_html: {value: f.object.content || 'Well done!'} %>
              <%= f.submit "Submit", class: "btn btn-primary" %>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>
</div>
