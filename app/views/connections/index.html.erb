<div class="tab-content" style="text-align:center">
  <div role="tab-panel" class="tab-pane active" id="connections">
    <div class="cards">
      <% @connections.each do |connection| %>
        <p><%= connection.buddy.firstname %> <%= connection.buddy.lastname %> </p>
        <%= simple_form_for(@goal_connection, url: goal_connections_path) do |f| %>
        <%= f.input :goal, collection: current_user.goals %>
        <%= f.input :connection, as: :hidden, input_html: { value: connection.id} %>
        <%= f.submit "add as a buddy" %>
        <% end %>

      <% end %>
    </div>
  </div>

  <div role="tab-panel" class="tab-pane" id="requests">
    <div class="cards">
     <% @requests.each do |request| %>
          <p><%= request.goal.owner.firstname %> wants you to be their buddy on their goal to <%= request.goal.title %></p>
          <%= form_for request, remote: true do |f| %>
            <%= f.hidden_field :status, value: "Accepted" %>
            <button class="btn btn-success" type="submit">
              Accept
            </button>
          <% end %>
          <%= form_for request, remote: true do |f| %>
            <%= f.hidden_field :status, value: "Declined" %>
            <button class="btn btn-danger" type="submit">
              Decline
            </button>
          <% end %>
      <% end %>
    </div>
  </div>

    <div role="tab-panel" class="tab-pane" id="buddies">
    <div class="cards">
     <% @buddies.each do |buddy| %>
        <p><%= buddy.firstname %> <%= buddy.lastname %></p>
      <% end %>
    </div>
  </div>

  <div role="tab-panel" class="tab-pane" id="buddyof">
    <div class="cards">
      <% @buddyofs.each do |buddy| %>
        <p><%= buddy.firstname %> <%= buddy.lastname %></p>
         <p>GOALS:<%= buddy.goal_ids %></p>
      <% end %>
    </div>
  </div>

  <div role="tab-panel" class="tab-pane" id="fans">
     <div class="cards">
      <% @fans.each do |fan| %>
        <p><%= fan.owner.firstname %> <%= fan.owner.lastname %></p>
      <% end %>

    </div>
  </div>

